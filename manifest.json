{
    "manifest_version": 2,

    "name": "TabSaver",
    "description": "Allow to save and load every tabs.",
    "version": "1.0",

    "browser_action": {
        "default_icon": "img/tabs32.png",
        "default_popup": "tabsaver.html",
        "default_title": "TabSaver"
    },

    /* http://www.flaticon.com/packs/essential-collection */
    "icons": {
        "16": "img/tabs16.png",
        "32": "img/tabs32.png",
        "128": "img/tabs128.png",
        "512": "img/tabs512.png"
    },

    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "https://ajax.googleapis.com/"
    ]
}
